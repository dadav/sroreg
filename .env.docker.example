# Docker Compose Environment Variables
# Copy this file to .env before running docker-compose

# GitHub Container Registry (replace with your username/org)
GITHUB_REPOSITORY=yourusername/sroreg

# Database Configuration
DB_SERVER=sqlserver
DB_PORT=1433
DB_USER=sa
DB_PASSWORD=YourStrongPassword123!
DB_DATABASE=SRO_VT_ACCOUNT

# SQL Server Edition (Express, Developer, Standard, Enterprise)
MSSQL_PID=Express

# Server Configuration
SERVER_PORT=8080

# Base URL (set this when using reverse proxy)
# Examples: https://register.example.com
BASE_URL=

# SMTP Configuration (for password reset emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@silkroad-server.com
